{
    "name": "gitHelper-plugin",
    "version": "0.1.0",
    "description": "Developer productivity plugin for the Smartr challenge",
    "author": {
        "name": "Jack Charles"
    },
    "commands": [
        "./commands/review-changes.md",
        "./commands/suggest-commit-message.md"
    ],
    "skills": "./skills/code-review/SKILL.md",
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Write|Edit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "./hooks/after-write.sh"
                    }
                ]
            }
        ]
    }
}
